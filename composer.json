{
    "name": "leroy-merlin-br/metamorphosis",
    "type": "library",
    "keywords": [
        "kafka"
    ],
    "description": "Kafka package for laravel applications",
    "require": {
        "php": ">=7.1",
        "ext-rdkafka": "*",
        "illuminate/support": "~5.5.0|~5.6.0",
        "illuminate/console": "~5.5.0|~5.6.0",
        "illuminate/config": "~5.5.0|~5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "kwn/php-rdkafka-stubs": "~1.1.0",
        "orchestra/testbench": "~3.5.0|~3.6.0"
    },
    "autoload": {
        "psr-4" : {
            "Metamorphosis\\" : "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/test-helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Boitata Team",
            "email": "boitata@leroymerlin.com.br"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Metamorphosis\\MetamorphosisServiceProvider"
            ]
        }
    }
}
